<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/widget_margin"
    tools:ignore="HardcodedText,ContentDescription" >

    <ImageButton
        android:id="@+id/device_layout_a2dp_toggle_btn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="#c0c0c0c0"
        android:scaleType="fitCenter"
        android:src="@drawable/a2dp_off" />

    <TextView
        android:id="@+id/device_layout_a2dp_devname"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:singleLine="true"
        android:text="Unselected"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff000000" />
    <ImageView
        android:id="@+id/device_layout_a2dp_auto_conn"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitEnd"
        android:src="@drawable/auto_connect" />
    
</RelativeLayout>